<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_search">

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.sunggil.flowandroidtest.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_recent"
        android:name="com.sunggil.flowandroidtest.ui.recent.RecentFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_recent" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.sunggil.flowandroidtest.ui.favorite.FavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_favorite" />
</navigation>